<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".opciones">

     <TextView
         android:id="@+id/tv_imagen"
         android:layout_width="0dp"
         android:layout_height="0dp"
         android:gravity="center"
         android:text="@string/userpic"
         app:layout_constraintBottom_toTopOf="@+id/tv_ChangeImagePic"
         app:layout_constraintEnd_toEndOf="parent"
         app:layout_constraintStart_toStartOf="parent"
         app:layout_constraintTop_toTopOf="parent" />

     <TextView
         android:id="@+id/tv_ChangeImagePic"
         android:layout_width="0dp"
         android:layout_height="50dp"
         android:background="@drawable/rounded_buton_login_register"
         android:paddingVertical="12dp"
         android:paddingLeft="15dp"
         android:text="@string/changeuserpic"
         android:textSize="18sp"
         app:layout_constraintEnd_toEndOf="parent"
         app:layout_constraintHorizontal_bias="0.0"
         app:layout_constraintStart_toStartOf="parent"
         tools:layout_editor_absoluteY="262dp" />

     <Spinner
         android:id="@+id/spinner"
         android:layout_width="0dp"
         android:layout_height="50dp"
         android:layout_marginTop="28dp"
         android:background="@drawable/rounded_buton_login_register"
         android:entries="@array/time2live"
         android:paddingVertical="12dp"
         android:paddingLeft="15dp"
         app:layout_constraintEnd_toEndOf="parent"
         app:layout_constraintHorizontal_bias="0.0"
         app:layout_constraintStart_toStartOf="parent"
         app:layout_constraintTop_toBottomOf="@+id/tv_ChangeImagePic" />

     <TextView
         android:id="@+id/et_logout"
         android:layout_width="0dp"
         android:layout_height="50dp"
         android:layout_marginTop="28dp"
         android:background="@drawable/rounded_buton_login_register"
         android:paddingVertical="12dp"
         android:paddingLeft="15dp"
         android:text="@string/logout"
         android:textSize="18sp"
         app:layout_constraintEnd_toEndOf="parent"
         app:layout_constraintHorizontal_bias="0.0"
         app:layout_constraintStart_toStartOf="parent"
         app:layout_constraintTop_toBottomOf="@+id/spinner" />

</androidx.constraintlayout.widget.ConstraintLayout>